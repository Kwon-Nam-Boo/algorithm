package com.ssafy.book;

import java.util.ArrayList;

public interface IBookMgr {
		//1. 도서 추가
		void add(Book book);
		
		//2. 전체 데이터 검색
		ArrayList<Book> search();
	
		
		//3. 도서가 구매되어 재고 수량을 빼준다
		void sell(String isbn, int quantity) throws Exception;
		
		//4. 도서가 구매되어 재고 수령울 더한다.
		void buy(String isbn, int quantity) throws Exception;
		
		//5.재고 도서들의 수량* 금액을 하여 총 재고 금액을 구하여 리턴
		int getTotalAmount();
		
		//7. 출판사로 검색
		ArrayList<Book> findByPublisher(String publisher);
		
		//8. Novel만 검색
		ArrayList<Novel> findNovel();
		
		//9. 가격으로 검색
		ArrayList<Book> findByPrice(int price);
		
		//10. 저장된 모든 금액 합계
		int sum();
		
		//저장된 모든 금액 평균
		double average();
		
		
}
